<div class="container-login">
<div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if flash[:alert] %>
      <p><%= flash[:alert] %></p>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Entrar" %>
    <%= link_to 'Me cadastrar >', new_user_registration_path %>
  </div>
<% end %>
</div>
</div>


